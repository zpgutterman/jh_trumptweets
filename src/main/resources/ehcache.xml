<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns='http://www.ehcache.org/v3'
         xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="simple">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <heap>100</heap>
    </cache-template>

    <cache alias="com.zpg.trumptweet.domain.User" uses-template="simple"/>

    <cache alias="com.zpg.trumptweet.domain.Authority" uses-template="simple"/>

    <cache alias="com.zpg.trumptweet.domain.User.authorities" uses-template="simple"/>

    <cache alias="com.zpg.trumptweet.domain.PersistentToken" uses-template="simple"/>

    <cache alias="com.zpg.trumptweet.domain.User.persistentTokens" uses-template="simple"/>

    <cache alias="com.zpg.trumptweet.social.SocialUserConnection" uses-template="simple"/>

    <cache alias="com.zpg.trumptweet.domain.Category" uses-template="simple"/>

    <cache alias="com.zpg.trumptweet.domain.Category.charities" uses-template="simple"/>

    <cache alias="com.zpg.trumptweet.domain.Charity" uses-template="simple"/>

    <cache alias="com.zpg.trumptweet.domain.Tweet_log" uses-template="simple"/>

    <cache alias="com.zpg.trumptweet.domain.Tweet_log.categories" uses-template="simple"/>

    <cache alias="com.zpg.trumptweet.domain.Category.tweet_logs" uses-template="simple"/>

    <cache alias="com.zpg.trumptweet.domain.Tweetlog" uses-template="simple"/>

    <cache alias="com.zpg.trumptweet.domain.Tweetlog.categories" uses-template="simple"/>

    <cache alias="com.zpg.trumptweet.domain.Category.tweetlogs" uses-template="simple"/>

    <cache alias="com.zpg.trumptweet.domain.Testentity" uses-template="simple"/>

    <!-- jhipster-needle-ehcache-add-entry -->
</config>
